<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editFirstName"
                    style="@style/EditTextStyleTransparent1"
                    android:layout_width="wrap_content"
                    android:inputType="textCapWords"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:nextFocusDown="@+id/editMiddleName"
                    android:hint="@string/firstName" />

                <EditText
                    android:id="@+id/editMiddleName"
                    style="@style/EditTextStyleTransparent1"
                    android:layout_width="wrap_content"
                    android:inputType="textCapWords"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:nextFocusDown="@+id/editLastName"
                    android:layout_weight="1"
                    android:hint="@string/middleName" />

                <EditText
                    android:id="@+id/editLastName"
                    style="@style/EditTextStyleTransparent1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:nextFocusDown="@+id/editYearsOfExperience"
                    android:inputType="textCapWords"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:hint="@string/lastName" />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <Spinner
                    android:id="@+id/spinnerQualification"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/underline_light_grey"
                    android:dropDownVerticalOffset="37dp"
                    android:popupBackground="@drawable/round_rect_fill_white"
                    android:spinnerMode="dropdown"
                    android:textSize="13sp" />

                <com.drughub.doctor.utils.DrughubIcon
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center"
                    android:text="@string/icon_down_arrow"
                    android:textColor="@color/colorHint"
                    android:textSize="15sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <Spinner
                    android:id="@+id/spinnerSpecialization"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/underline_light_grey"
                    android:dropDownVerticalOffset="37dp"
                    android:popupBackground="@drawable/round_rect_fill_white"
                    android:spinnerMode="dropdown"
                    android:textSize="13sp" />

                <com.drughub.doctor.utils.DrughubIcon
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center"
                    android:text="@string/icon_down_arrow"
                    android:textColor="@color/colorHint"
                    android:textSize="15sp" />

            </FrameLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/editYearsOfExperience"
                style="@style/EditTextStyleTransparent1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="10dp"
                android:hint="@string/hintYearsOfExperience"
                android:nextFocusDown="@+id/editBuildingName"
                android:inputType="date" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editBuildingName"
                    style="@style/EditTextStyleTransparent1"
                    android:layout_width="match_parent"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:nextFocusDown="@+id/editDoorNo"
                    android:hint="@string/buildingName" />

                <EditText
                    android:id="@+id/editDoorNo"
                    style="@style/EditTextStyleTransparent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:nextFocusDown="@+id/editStreetName"
                    android:singleLine="true"
                    android:hint="@string/doorNo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editStreetName"
                    style="@style/EditTextStyleTransparent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:nextFocusDown="@+id/editAreaName"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:hint="@string/streetName" />

                <EditText
                    android:id="@+id/editAreaName"
                    style="@style/EditTextStyleTransparent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:layout_marginLeft="10dp"
                    android:nextFocusDown="@+id/editPincode"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:hint="@string/areaName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <Spinner
                        android:id="@+id/spinnerCountry"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/underline_light_grey"
                        android:dropDownVerticalOffset="37dp"
                        android:popupBackground="@drawable/round_rect_fill_white"
                        android:spinnerMode="dropdown"
                        android:textSize="13sp" />

                    <com.drughub.doctor.utils.DrughubIcon
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:gravity="center"
                        android:text="@string/icon_down_arrow"
                        android:textColor="@color/colorHint"
                        android:textSize="15sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <Spinner
                        android:id="@+id/spinnerState"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/underline_light_grey"
                        android:dropDownVerticalOffset="37dp"
                        android:popupBackground="@drawable/round_rect_fill_white"
                        android:spinnerMode="dropdown"
                        android:textSize="13sp" />

                    <com.drughub.doctor.utils.DrughubIcon
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:gravity="center"
                        android:text="@string/icon_down_arrow"
                        android:textColor="@color/colorHint"
                        android:textSize="15sp" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <Spinner
                        android:id="@+id/spinnerDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/underline_light_grey"
                        android:dropDownVerticalOffset="37dp"
                        android:popupBackground="@drawable/round_rect_fill_white"
                        android:spinnerMode="dropdown"
                        android:textSize="13sp" />

                    <com.drughub.doctor.utils.DrughubIcon
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:gravity="center"
                        android:text="@string/icon_down_arrow"
                        android:textColor="@color/colorHint"
                        android:textSize="15sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <Spinner
                        android:id="@+id/spinnerTownorCity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/underline_light_grey"
                        android:dropDownVerticalOffset="37dp"
                        android:popupBackground="@drawable/round_rect_fill_white"
                        android:spinnerMode="dropdown"
                        android:textSize="13sp" />

                    <com.drughub.doctor.utils.DrughubIcon
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:gravity="center"
                        android:text="@string/icon_down_arrow"
                        android:textColor="@color/colorHint"
                        android:textSize="15sp" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editPincode"
                    style="@style/EditTextStyleTransparent1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:nextFocusDown="@+id/editLandMark"
                    android:singleLine="true"
                    android:hint="@string/pincode" />

                <EditText
                    android:id="@+id/editLandMark"
                    style="@style/EditTextStyleTransparent1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:hint="@string/landmark" />
            </LinearLayout>

            <EditText
                android:id="@+id/editEmailAddress"
                style="@style/EditTextStyleTransparent1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="10dp"
                android:hint="@string/hintEmailId"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editMobile"
                style="@style/EditTextStyleTransparent1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="10dp"
                android:hint="@string/hintMobile"
                android:inputType="phone" />

            <Button
                android:id="@+id/buttonUpdate"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="25dp"
                android:text="@string/update" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>