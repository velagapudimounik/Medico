<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="@string/Delete_message"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/Delete_message2"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:background="@color/Color_grey"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/Nobutton"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_colorchange"
        android:text="@string/No_button"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/yes_button"
        android:background="@drawable/button_colorchange"
        android:id="@+id/yesbutton"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/Nobutton"
        android:textAllCaps="false" />
    </RelativeLayout>


</LinearLayout>