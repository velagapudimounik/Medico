<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/cardview_dark_background"
    android:gravity="center"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@color/colorDecorationDark"/>

                    <com.drughub.doctor.utils.DrughubIcon
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_image"
                        android:textSize="25dp"
                        android:textColor="@color/colorDecoration"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/imageIcon" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">

                    <View
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@color/colorDecorationDark"/>

                    <com.drughub.doctor.utils.DrughubIcon
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Plusicon"
                        android:textSize="25dp"
                        android:textColor="@color/colorDecoration"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/plusIcon" />

               </FrameLayout>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hintClinicName"
                style="@style/EditTextStyle"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hintAddress"
                style="@style/EditTextStyle"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="@string/hintMobile"
                android:inputType="phone"
                style="@style/EditTextStyle"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="@string/hintConsultationFee"
                style="@style/EditTextStyle"
                android:inputType="numberDecimal"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="@string/hintClinicTimings"
                android:inputType="time"
                style="@style/EditTextStyle"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textFrom"
                        android:textSize="13sp"
                        android:textColor="@color/colorTextLight"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/textView3"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/edit_text_height"
                        android:inputType="date"
                        android:hint="@string/hintDate"
                        android:textSize="13sp"
                        android:ems="10"
                        android:id="@+id/from_date_picker"
                        style="@style/EditTextStyle"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textTo"
                        android:textSize="13sp"
                        android:textColor="@color/colorTextLight"
                        android:id="@+id/textView6"
                        android:layout_marginBottom="10dp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/edit_text_height"
                        android:inputType="date"
                        android:hint="@string/hintDate"
                        android:textSize="13sp"
                        android:ems="10"
                        android:id="@+id/to_date_picker"
                        style="@style/EditTextStyle"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nonWorkingDays"
                android:textColor="@color/colorTextLight"
                android:textSize="12dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/Monday_text"
                    android:id="@+id/monday"
                    android:layout_margin="@dimen/margin_baby"
                    style="@style/CheckBoxStyle"/>

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/Tuesday_text"
                    android:id="@+id/tuesday"
                    android:layout_margin="@dimen/margin_baby"
                    style="@style/CheckBoxStyle"/>

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/Wednesday_text"
                    android:id="@+id/wednesday"
                    android:layout_margin="@dimen/margin_baby"
                    style="@style/CheckBoxStyle"/>

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/Thursday_text"
                    android:id="@+id/thursday"
                    android:layout_margin="@dimen/margin_baby"
                    style="@style/CheckBoxStyle"/>

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/Friday_text"
                    android:id="@+id/friday"
                    android:layout_margin="@dimen/margin_baby"
                    style="@style/CheckBoxStyle"/>

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/Saturday_text"
                    android:id="@+id/saturday"
                    android:layout_margin="@dimen/margin_baby"
                    style="@style/CheckBoxStyle"/>

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/Sunday_text"
                    android:id="@+id/sunday"
                    android:layout_margin="@dimen/margin_baby"
                    style="@style/CheckBoxStyle"/>

            </LinearLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/consultationAtHomeText"
                android:textSize="15dp"
                style="@style/check_box_style"
                android:paddingLeft="10dp"
                android:textColor="@color/colorTextLight"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textAdd"
                android:id="@+id/addButton"
                style="@style/ButtonStyle"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>